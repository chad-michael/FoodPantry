@model FoodPantry.Data.Models.EmailSetting

@{
    ViewBag.Title = "Create";
}

<h2>Food Pantry</h2>

<div class="row">
    <div class="large-8 columns">
        <h3>Email Setting</h3>
    </div>
    <div class="large-4 columns text-right">
        <h4 class="subheader">Create</h4>
    </div>
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="large-8 columns">
                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectContents, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SubjectContents, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SubjectContents, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="large-2 columns">
                <div class="form-group">
                    <br />
                    @Html.EditorFor(model => model.ActiveEmail)
                    @Html.LabelFor(model => model.ActiveEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.ActiveEmail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="large-2 columns">
                <div class="form-group">
                    <br />
                    @Html.EditorFor(model => model.Deleted)
                    @Html.LabelFor(model => model.Deleted, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.ValidationMessageFor(model => model.Deleted, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailContents, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.EmailContents, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailContents, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="large-12 columns text-right">
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="large-6 columns">
                @Html.ActionLink("Back to List", "Index")
            </div>
            <div class="large-6 columns text-right">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="button" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

